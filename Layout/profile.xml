<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.oltek.solek.foodmanagement.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profilephoto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Profile photo"
            android:minHeight="120dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/profileusername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp" />

        <TextView
            android:id="@+id/profileuseremail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp" />

        <TextView
            android:id="@+id/userid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="30dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/dodajbtn"
                android:text="Dodaj produkt"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/listabtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Lista produktów lodówka" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/zawartosctbtn"
        android:text="Zawartość mojej lodówki"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:visibility="invisible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/terminybtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Co trzeba zjeść?" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.5">

            <Button
                android:id="@+id/logoutbtn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Wyloguj" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>