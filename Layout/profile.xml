<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="pl.oltek.solek.foodmanagement.Profile">

    <ImageView
        android:id="@+id/profilephoto"
        android:src="@mipmap/ic_launcher"
        android:minHeight="120dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:contentDescription="Profile photo"/>

    <TextView
        android:id="@+id/profileusername"
        android:minHeight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/profileuseremail"
        android:minHeight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/dodajbtn"
        android:text="Dodaj produkt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/zawartosctbtn"
        android:text="Zawartość mojej lodówki"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/listabtn"
        android:text="Lista zakupów."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/terminybtn"
        android:text="Co trzeba zjeść?"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/logoutbtn"
        android:text="Wyloguj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>